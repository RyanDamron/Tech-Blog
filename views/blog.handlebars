<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Tech Blog</h3>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Projects:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
         <h4><a href="/posts/{{post.id}}">{{post.name}}</a></h4>
        <h6><a href="/posts/{{post.id}}">{{post.text}}<br>{{post.user_id.username}}</a></h6>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="./js/blog.js"></script>
