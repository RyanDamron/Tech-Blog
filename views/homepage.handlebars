{{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Projects:</h3>

    {{#each posts as |post|}}
    <div class="row mb-2">
      <div class="col-md-8">
         <h4><a href="/posts/{{post.id}}">{{post.name}}</a></h4>
        <h6>{{post.text}}<br>Posted by: {{user.username}} on: {{post.date_created}}</h6>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>